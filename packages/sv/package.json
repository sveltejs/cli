{
	"name": "sv",
	"version": "0.11.2",
	"type": "module",
	"description": "A command line interface (CLI) for creating and maintaining Svelte applications",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sveltejs/cli.git",
		"directory": "packages/cli"
	},
	"homepage": "https://svelte.dev",
	"scripts": {
		"build": "node lib/create/scripts/build-templates.js lib/create/dist",
		"check": "tsgo",
		"format": "pnpm lint --write",
		"lint": "prettier --check . --config ../../prettier.config.js --ignore-path ../../.gitignore --ignore-path .gitignore --ignore-path ../../.prettierignore"
	},
	"files": [
		"bin.js",
		"lib",
		"!lib/**/tests",
		"!lib/**/_tests",
		"!lib/**/test",
		"!lib/**/*.spec.js",
		"!lib/**/*.test.js",
		"!lib/**/vitest.config.js",
		"!lib/**/fixtures.js",
		"!lib/**/snapshots",
		"!lib/create/templates",
		"!lib/create/shared",
		"!lib/create/scripts",
		"!lib/create/node_modules",
		"!lib/create/playground.js",
		"!lib/create/README.md"
	],
	"bin": "./bin.js",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"default": "./lib/index.js"
		},
		"./testing": {
			"types": "./lib/testing.d.ts",
			"default": "./lib/testing.js"
		},
		"./core": {
			"types": "./lib/core.d.ts",
			"default": "./lib/core.js"
		}
	},
	"dependencies": {
		"@clack/prompts": "1.0.0-alpha.1",
		"commander": "^14.0.2",
		"dedent": "^1.7.0",
		"degit": "^2.8.4",
		"empathic": "^2.0.0",
		"esrap": "^2.2.1",
		"gitignore-parser": "^0.0.2",
		"magic-string": "^0.30.21",
		"package-manager-detector": "^1.6.0",
		"picocolors": "^1.1.1",
		"ps-tree": "^1.2.0",
		"silver-fleece": "^1.2.1",
		"smol-toml": "^1.5.2",
		"svelte": "^5.45.10",
		"tar-fs": "^3.1.1",
		"tiny-glob": "^0.2.9",
		"tinyexec": "^1.0.2",
		"valibot": "^1.2.0",
		"yaml": "^2.8.2",
		"zimmerframe": "^1.1.4"
	},
	"devDependencies": {
		"@types/degit": "^2.8.6",
		"@types/estree": "^1.0.8",
		"@types/gitignore-parser": "^0.0.3",
		"@types/ps-tree": "^1.1.6",
		"@types/tar-fs": "^2.0.4",
		"decircular": "^1.0.0",
		"prettier": "^3.7.4",
		"sucrase": "^3.35.1"
	},
	"keywords": [
		"create",
		"new",
		"project",
		"starter",
		"svelte",
		"sveltekit",
		"template",
		"wizard"
	]
}
