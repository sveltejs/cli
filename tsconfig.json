{
	"exclude": ["**/dist/**", "**/temp/**"],
	"compilerOptions": {
		"checkJs": true,
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"rewriteRelativeImportExtensions": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noEmit": true
	}
}
