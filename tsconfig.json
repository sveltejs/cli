{
	"exclude": [
		"**/dist/**",
		"packages/create/templates/**",
		"packages/create/shared/**",
		"**/temp/**",
		"**/test/**"
	],
	"compilerOptions": {
		"checkJs": true,
		"moduleResolution": "Bundler",
		"module": "es2022",
		"target": "es2022",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noEmit": true
	}
}
