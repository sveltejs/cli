{
	"exclude": [ "**/dist/**", "packages/cli/templates/**", "packages/cli/shared/**", "**/temp/**" ],
	"compilerOptions": {
		"checkJs": true,
		"module": "es2022",
		"moduleResolution": "node",
		"target": "es2022",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
	}
}
