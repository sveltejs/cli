{
	"exclude": ["**/dist/**", "packages/cli/templates/**", "packages/cli/shared/**", "**/temp/**"],
	"compilerOptions": {
		"checkJs": true,
		"moduleResolution": "Bundler",
		"module": "es2022",
		"target": "es2022",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"noEmit": true
	}
}
