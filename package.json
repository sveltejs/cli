{
	"name": "sv-monorepo",
	"version": "0.0.1",
	"description": "monorepo for sv and friends",
	"private": true,
	"type": "module",
	"scripts": {
		"check": "pnpm -r check",
		"lint": "pnpm -r lint && eslint --cache --cache-location node_modules/.eslintcache",
		"format": "pnpm -r format",
		"changeset:version": "changeset version && pnpm -r generate:version && git add --all",
