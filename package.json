{
	"name": "sv-monorepo",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"description": "monorepo for sv and friends",
	"engines": {
		"pnpm": "^10.0.0"
	},
	"scripts": {
		"build": "tsdown",
		"changeset:publish": "changeset publish",
		"check": "pnpm --parallel check",
		"dev": "tsdown -w & pnpm --parallel check -w & wait",
		"format": "pnpm --parallel format",
		"lint": "pnpm --parallel lint && eslint --cache --cache-location node_modules/.eslintcache",
		"test": "vitest run --silent",
		"test:ui": "vitest --ui",
		"update-deps": "node ./scripts/update-dependencies.js && pnpm format"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.8",
		"@playwright/test": "^1.57.0",
		"@sveltejs/eslint-config": "^8.3.4",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@types/node": "^20.14.8",
		"@typescript/native-preview": "7.0.0-dev.20251212.1",
		"@vitest/ui": "4.0.15",
		"eslint": "^9.39.1",
		"eslint-plugin-svelte": "^3.13.1",
		"magic-string": "^0.30.21",
		"prettier": "^3.7.4",
		"prettier-plugin-packagejson": "^2.5.20",
		"prettier-plugin-svelte": "^3.4.0",
		"sv": "workspace:*",
		"svelte": "^5.45.10",
		"tsdown": "^0.20.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0",
		"vitest": "4.0.15"
	},
	"packageManager": "pnpm@10.17.0"
}
